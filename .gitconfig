	algorithm = histogram
[core]
	editor = nvim

[alias]
  l = "!. ~/.scripts/githelpers && pretty_git_log"
  la = "!git l --all"
  lr = "!git l -30"
  lra = "!git lr --all"
  lg = "!git l -G $1 -- $2"
