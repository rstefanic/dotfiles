shell-integration-features = no-cursor
cursor-style = block
cursor-style-blink = false

font-family = Inconsolata
theme = onehalfdark
font-size = 14

keybind = ctrl+a>r=reload_config
keybind = ctrl+a>n=new_window
keybind = ctrl+a>t=new_tab

# Splits
keybind = ctrl+a>shift+\=new_split:right
keybind = ctrl+a>-=new_split:down
keybind = unconsumed:ctrl+l=goto_split:right
keybind = unconsumed:ctrl+k=goto_split:top
keybind = unconsumed:ctrl+j=goto_split:bottom
keybind = unconsumed:ctrl+h=goto_split:left
keybind = ctrl+a>z=toggle_split_zoom

# Split Resize
keybind = alt+h=resize_split:left,10
keybind = alt+j=resize_split:down,10
keybind = alt+k=resize_split:up,10
keybind = alt+l=resize_split:right,10
